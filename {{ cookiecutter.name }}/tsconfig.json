{
    "compilerOptions": {
        "module": "CommonJS",
        "target": "ES2017",
        "incremental": true,
        "skipLibCheck": true,
        "strictBindCallApply": false,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "esModuleInterop": true,
        "strict": true,
        "removeComments": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true
    }
}
